<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ShareServer</display-name>
  <resource-ref>
    <description>MysqlDataSource</description>

     <res-ref-name>jdbc/test</res-ref-name>
     <res-type>javax.sql.DataSource</res-type>
     <res-auth>Container</res-auth>
</resource-ref>

 <filter>
  <filter-name>Encoding</filter-name>
  <filter-class>edu.tjpu.share.filter.EncodingFilter</filter-class>
 </filter>
 <filter>
  <filter-name>LoginFilter</filter-name>
  <filter-class>edu.tjpu.share.filter.LoginFilter</filter-class>
 </filter>
 <filter>
  <filter-name>AndroidFilter</filter-name>
  <filter-class>edu.tjpu.share.filter.AndroidFilter</filter-class>
 </filter>
 <filter-mapping>
  <filter-name>Encoding</filter-name>
  <url-pattern>/*</url-pattern>
 </filter-mapping>


 <servlet>
  <servlet-name>LoginServlet</servlet-name>
  <servlet-class>aservlet.LoginServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>RegisterServlet</servlet-name>
  <servlet-class>aservlet.RegisterServlet</servlet-class>
 </servlet>
<servlet>
  <servlet-name>SelectGMCServlet</servlet-name>
  <servlet-class>aservlet.SelectGMCServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>MessageListServlet</servlet-name>
  <servlet-class>aservlet.MessageListServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>SuccessServlet</servlet-name>
  <servlet-class>aservlet.SuccessServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>UserListServlet</servlet-name>
  <servlet-class>aservlet.UserListServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>UpdateAvatarServlet</servlet-name>
  <servlet-class>edu.tjpu.share.servlet.UpdateAvatarServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>UploadFromAndroid</servlet-name>
  <servlet-class>aservlet.UploadFromAndroid</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>LoginServlet</servlet-name>
  <url-pattern>/servlet/LoginServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RegisterServlet</servlet-name>
  <url-pattern>/servlet/RegisterServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>SelectGMCServlet</servlet-name>
  <url-pattern>/servlet/SelectGMCServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>MessageListServlet</servlet-name>
  <url-pattern>/servlet/MessageListServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>SuccessServlet</servlet-name>
  <url-pattern>/servlet/SuccessServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>UserListServlet</servlet-name>
  <url-pattern>/servlet/UserListServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>UploadFromAndroid</servlet-name>
  <url-pattern>/servlet/UploadFromAndroid</url-pattern>
 </servlet-mapping>

 <welcome-file-list>
  <welcome-file>loginUI.jsp</welcome-file>
 </welcome-file-list>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>